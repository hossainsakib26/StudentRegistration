@model StudentRegistration.Models.AcademicClass

@{
    ViewBag.Title = "Academic Class Create";
}


@using (Html.BeginForm("Create", "AcademicClass", FormMethod.Post, new { @class = "col" }))
{
    @Html.AntiForgeryToken() // hide form data
    <div class="bg-light my-3 p-2 row">
        <p class="fs-1">Academic Division</p>
        @Html.HiddenFor(c => c.ID)

        <div class="border-bottom border-3 border-dark pb-1 col-12">
            <div class="mb-3 row">
                @Html.LabelFor(c => c.Code, new { @class = "form-label  col-md-12 col-lg-3" })
                <div class="col-md-12 col-lg-9">
                    @Html.TextBoxFor(c => c.Code, new { @class = "form-control row" })
                    @Html.ValidationMessageFor(c => c.Code, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="mb-3 row">
                @Html.LabelFor(c => c.Name, new { @class = "form-label col-md-12 col-lg-3" })
                <div class=" col-md-12 col-lg-9">
                    @Html.TextBoxFor(c => c.Name, new { @class = "form-control row" })
                    @Html.ValidationMessageFor(c => c.Name, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="mt-3 col-12">
            <div class="row">
                <button type="submit" class="btn btn-outline-info col-12 col-md-2 mb-2" value="create">Create</button>
                @Html.Raw(@ViewBag.Alert)
            </div>
        </div>

    </div>
}


@Scripts.Render("~/bundles/javaScript")